<div class="soccerWrapper" style="width: {{ config.width }}px">
    {% if loading %}
        {{ 'LOADING' | translate }}
    {% else %}
        {% if config.showMatches %}

            {# #################### MATCHES #################### #}
            <div class="xsmall">
                {% if matchViews.length %}
                    {% for matchView in matchViews %}
                        <div class="header-matchDay">
                            <div class="header-matchDay-icon">
                                <img class="big-icon {% if not config.colored %}no-color{% endif %}"
                                     src="{{ matchView.emblem }}" draggable="false" />
                            </div>
                            <div class="header-matchDay-text small bold">
                                <span>{{ matchView.competition }}</span>
                                <span>{{ matchView.matchDayLabel }}</span>
                            </div>
                        </div>

                        <table class="games">
                            <tbody>
                            {% for match in matchView.matches %}
                                <tr class="centered-row {% if match.focused %}bright{% endif %}">
                                    <td class="name matchName homeTeam {{ match.status }} {{ match.homeTeam.status }}">{{ match.homeTeam.name | replace }}</td>
                                    {% if config.logos %}
                                        <td class="logo">
                                            <img class="icon {% if not config.colored %}no-color{% endif %}"
                                                 src="{{ match.homeTeam.crest }}" draggable="false" />
                                        </td>
                                    {% endif %}
                                    <td class="status bold {{ match.status }}">{{ match.state }}</td>
                                    {% if config.logos %}
                                        <td class="logo"><img
                                                class="icon {% if not config.colored %}no-color{% endif %}"
                                                src="{{ match.awayTeam.crest }}" draggable="false" /></td>
                                    {% endif %}
                                    <td class="name matchName awayTeam {{ match.status }} {{ match.awayTeam.status }}">{{ match.awayTeam.name | replace }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% endfor %}
                {% else %}
                    <tr class="centered-row">
                        <td>{{ 'NO_MATCHES' | translate }}</td>
                    </tr>
                {% endif %}
            </div>
        {% endif %}

        {# #################### STANDINGS #################### #}
        {% if showTables %}
            <table class="xsmall table">
                <thead>
                <tr class="row">
                    <th></th>
                    {% if config.logos %}
                        <th></th>
                    {% endif %}
                    <th class="name">{{ 'TEAM' | translate }}</th>
                    <th class="centered"><i class="fas fa-futbol" /></th>
                    <th class="centered"><i class="fas fa-chart-line" /></th>
                    <th class="centered"><i class="fas fa-bullseye" /></th>
                </tr>
                </thead>
                <tbody>
                {% for standingEntry in standingView.standings %}
                    <tr class="centered-row {% if standingEntry.team.name === standingView.focusTeam %}bright{% endif %}">
                    <tr class="centered-row {% if standingEntry.team.name === standingView.focusTeam %}bright{% endif %}">
                        <td>{{ standingEntry.position }}</td>
                        {% if config.logos %}
                            <td class="logo">
                                <img class="icon {% if not config.colored %}no-color{% endif %}"
                                     src="{{ standingEntry.team.crest }}"
                                     draggable="false" />
                            </td>
                        {% endif %}
                        <td class="name">{{ standingEntry.team.name | replace }}</td>
                        <td class="centered">{{ standingEntry.playedGames }}</td>
                        <td class="centered">{{ standingEntry.points }}</td>
                        <td class="centered">
                            {% if standingEntry.goalDifference > 0 %}
                                +
                            {% endif %}
                            {{ standingEntry.goalDifference }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    {% endif %}
</div>
